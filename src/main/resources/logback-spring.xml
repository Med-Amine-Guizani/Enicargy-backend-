<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Définir le chemin du fichier de log (dans ton projet, par exemple dossier logs dans le même package que BackendEnicargyApplication) -->
    <property name="LOG_PATH" value="src/main/resources/logs" />
    <property name="LOG_FILE" value="${LOG_PATH}/enicargy.log" />

    <!-- Format personnalisé -->
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>

    <!-- Appender pour fichier -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender pour console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %highlight(%-5level) [%thread] %green(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger spécifique pour tes controllers -->
    <logger name="org.example.backendenicargy.Controllers" level="DEBUG" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Root logger (tous les autres logs) -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
